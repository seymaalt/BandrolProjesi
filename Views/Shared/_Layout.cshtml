<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjeBandrol.styles.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <!--begin::Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700|Roboto:300,400,500,600,700">
</head>
<body>
    <header>
        <nav id="nav" class="navbar navbar-expand-sm    container-nav" style="padding-top:0;padding-bottom:0;" >
            <div class="nav-logo" style="display:flex;">
                
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img alt="Logo" src="https://cdn0.sabis.sakarya.edu.tr/logo/1.0.0/logo-sabis-sau.png"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                
               
                <div style="text-align:left;margin-left:100px">
                    <a class="nav-link" style="background-color:#282F48; color:white; border-radius:3px; margin-top:3.5px;">
                        <span>Bandrol Takip Sistemi</span>
                    </a>
                </div>

            </div>


            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" >
                <partial name="_LoginPartial.cshtml" />
            </div>
              
            
        </nav>
      
    </header>
    <div style="display:flex;height:650px;">
      <partial name="_Aside.cshtml" /> 
      
        <div class="container-fluid " style="top:100px; background-color:#F2F3F8;">
            <main role="main" class="pb-0 " style="margin-top:20px; ">
                @RenderBody()
            </main>
        </div>
    </div>

    <partial name="_Footer.cshtml" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>